{
  "rules": {
    "quotes": [2, "single"],
    "no-console": 0,
    "one-var": ["error", "never"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }]
  },
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "idiomatic"
}
